#! /usr/bin/env casarun
#
# casapy script
#
# To run this:
#     casapy --nogui -c $ASTUTE/bin/getdata
#
# it would be useful to find out if there is some "import casa" style,
# so you don't have to run this from within casapy?
#

#   from astute
import astute, alines, parfile
import sys, os

#    report
print "@ASTUTE: getdata"

#    setup, grab parameters
a = astute.Astute()
p = parfile.ParFile()

#    set parameters
f_fits = a.resolve(p.get('fits'))
f_im   = 'im'

#    do work
print "casa::importfits ",f_fits
importfits(f_fits, f_im, overwrite=True)
s = imstat(f_im,axes=[0,1],logfile='imstat.tab',append=False)

