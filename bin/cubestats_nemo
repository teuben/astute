#! /bin/csh -f
#
#   cubestats, the NEMO way


set fits=silly.fits
set tab=ccdstat.tab
set clean=0
set robust=f
#           pipeline can override them
pipeset -s csh > tmp$$.par;  source tmp$$.par;  rm tmp$$.par


#           command line overrides (just a cute CSH trick)
foreach _arg ($*)
  set $_arg
end


echo @ASTUTE:  cubestats_nemo 

set fits=`tasfn $fits`

if (! -e $fits) then
  echo Warning: fits=$fits does not seem to exist
  exit 1
endif

rm -f nemo
fitsccd in=$fits out=nemo
ccdstat in=nemo bad=0 robust=$robust planes=0 > $tab

if ($clean) rm -f nemo

