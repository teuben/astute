#! /usr/bin/env python
#
#   show what's inside a BDP
#

# file = 'test00.p'

import sys, os
import admit1 as admit


if __name__ == "__main__":
    if len(sys.argv) < 2:
	print 'Need a (pickle) filename'
	sys.exit(0)
    file = sys.argv[1]
    a = admit.ADMIT()
    b = a.pload(file)
    #
    print 'BDP ',b.name
    print 'filename: ',b.filename
    if len(b.deps)==0:
	print 'deps: -'
    else:
	print 'deps: ',b.deps
    if len(b.derv)==0:
	print 'derv: -'
    else:
	print 'derv:'
	for bi in b.derv:
	    print '    : ',bi.name
    t = b.task[0]
    print 'TASK ',t.name
    print '     ',t.keys
    print '     ',t.keyvals
